pipeline {
    agent any
    parameters {
        booleanParam(defaultValue: false, description: "This is bla bla", name: "testBool")
    }
    stages {
        stage("Stage-1") {
            steps {
                sh '''
                chmod 755 ./jenkins/scripts/s cript1.sh
                sh './jenkins/scripts/script1.sh'
                echo "${BUILD_NUMBER}"
                echo "The Boolean is: ${params.testBool}"
                '''
            }
            // steps {
            //     echo "The Boolean is: ${params.testBool}"
            // }
        }
        stage("Stage-2") {
            steps {
                sh '''
                chmod 755 ./jenkins/scripts/script2.sh
                sh './jenkins/scripts/script2.sh'
                echo $BUILD_NUMBER
                '''
            }
        }
    }
}